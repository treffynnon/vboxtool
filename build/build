#!/bin/sh

# Read version info 
version="$1"
if [ ! -n "$version" ]
then
  echo "Usage: build <version>"
  exit   
fi

basedir=`pwd`
zipfile=$basedir/vboxtool-$version.zip
  
echo Building $zipfile

# Create a zip file (from trunk folder):
cd $basedir/..
rm -f $zipfile
zip -vr $zipfile COPYING.txt readme.txt script/vbox
echo "Build of $zipfile completed."


